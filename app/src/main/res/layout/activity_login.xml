<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:id="@+id/cons"
        tools:context=".login.LoginUI">
    <ImageView
            app:layout_constraintRight_toRightOf="@+id/cons"
            app:layout_constraintLeft_toLeftOf="@+id/cons"
            android:layout_margin="80dp"
            app:layout_constraintTop_toTopOf="@+id/cons"
            app:layout_constraintBottom_toTopOf="@+id/linear"
            android:src="@drawable/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:id="@+id/linear"
            app:layout_constraintBottom_toBottomOf="@+id/cons"
            android:layout_marginBottom="20sp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/button_phone"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="手机号登陆"
                android:background="@drawable/button_shape"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        <Button
                android:id="@+id/button_email"
                android:layout_marginTop="15dp"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="邮箱登陆"
                android:background="@drawable/button_shape"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>