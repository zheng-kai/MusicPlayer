<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/clayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
>
    <ImageView
            tools:src="@drawable/label"
            android:id="@+id/image_song"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="@+id/clayout"
            app:layout_constraintBottom_toTopOf="@+id/seekbar"
            app:layout_constraintLeft_toLeftOf="@id/clayout"
            app:layout_constraintRight_toRightOf="@+id/clayout"
    />

    <android.support.constraint.ConstraintLayout
            android:id="@+id/layout"
            app:layout_constraintBottom_toBottomOf="@id/clayout"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button android:id="@+id/pause_play"
                app:layout_constraintStart_toStartOf="@id/layout"
                app:layout_constraintEnd_toEndOf="@id/layout"
                android:background="@drawable/pause"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
        <Button android:id="@+id/prior"
                app:layout_constraintTop_toTopOf="@+id/layout"
                app:layout_constraintBottom_toBottomOf="@id/layout"
                app:layout_constraintRight_toLeftOf="@+id/pause_play"
                android:background="@drawable/prior"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginEnd="17dp"/>
        <Button android:id="@+id/next"
                app:layout_constraintTop_toTopOf="@+id/layout"
                app:layout_constraintBottom_toBottomOf="@id/layout"
                app:layout_constraintLeft_toRightOf="@+id/pause_play"
                android:background="@drawable/next"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginStart="17dp"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintBottom_toTopOf="@id/layout"
    />
    <TextView
            tools:text="00:00"
            android:id="@+id/current_time"
            android:textSize="10sp"
            app:layout_constraintTop_toTopOf="@+id/seekbar"
            app:layout_constraintBottom_toBottomOf="@+id/seekbar"
            app:layout_constraintRight_toLeftOf="@+id/seekbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            tools:text="03:12"
            android:id="@+id/total_time"
            android:textSize="10sp"
            app:layout_constraintTop_toTopOf="@+id/seekbar"
            app:layout_constraintBottom_toBottomOf="@+id/seekbar"
            app:layout_constraintLeft_toRightOf="@+id/seekbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>